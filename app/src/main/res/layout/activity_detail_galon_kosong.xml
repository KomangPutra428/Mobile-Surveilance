<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail_galon_kosong">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:elevation="8dp">
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/dailynBar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#ffffff"
                app:title="Rasio Galon"
                app:titleTextColor="#212121" >

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_below="@+id/toolbar"
            android:layout_above="@id/linearbutton"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/detail_galon_kosong"
                    android:layout_width="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="4dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="15dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:src="@drawable/storefront" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="#616161"
                                    android:text="Kode Pelanggan"
                                    android:textAppearance="?attr/textAppearanceHeadline6"
                                    android:textSize="10sp" />
                                <TextView
                                    android:id="@+id/kodepelanggan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="#0A0A0A"
                                    android:textStyle="bold"
                                    android:text=""
                                    android:textAppearance="?attr/textAppearanceHeadline6"
                                    android:textSize="14sp" />

                            </LinearLayout>


                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nama Pelanggan"
                                android:textColor="#9E9E9E" />

                            <TextView
                                android:id="@+id/namapelanggan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="#212121"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">
                            <TextView
                                android:text="Segmen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#9E9E9E"/>

                            <TextView
                                android:id="@+id/segment"
                                android:layout_width="wrap_content"
                                android:gravity="end"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="#212121"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Depo"
                                android:textColor="#9E9E9E" />

                            <TextView
                                android:id="@+id/depo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="end"
                                android:textColor="#212121"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layerType="software"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/dotted"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:src="@drawable/date_range" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="#616161"
                                    android:text="Transaksi"
                                    android:textAppearance="?attr/textAppearanceHeadline6"
                                    android:textSize="10sp" />
                                <TextView
                                    android:id="@+id/bulantahun"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="#0A0A0A"
                                    android:textStyle="bold"
                                    android:text=""
                                    android:textAppearance="?attr/textAppearanceHeadline6"
                                    android:textSize="14sp" />

                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="penjualan galon / bulan"
                                android:textColor="#9E9E9E" />

                            <TextView
                                android:id="@+id/jumlahgalon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="#212121"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rata-rata Penjualan/Hari"
                                android:textColor="#9E9E9E" />

                            <TextView
                                android:id="@+id/rata_rata"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="#212121"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Standar (1,5 Kali Rata-rata/Hari)"
                                android:textColor="#9E9E9E" />

                            <TextView
                                android:id="@+id/standard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="#212121"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/detail_perbandingan"
                    android:layout_below="@+id/detail_galon_kosong"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:visibility="visible"
                    app:strokeWidth="3dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="4dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="15dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center|center_horizontal|center_vertical"
                                android:src="@drawable/assignment_turned_in" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="#616161"
                                    android:text="Perbandingan"
                                    android:textAppearance="?attr/textAppearanceHeadline6"
                                    android:textSize="10sp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="#0A0A0A"
                                    android:textStyle="bold"
                                    android:text="Stok Galon &amp; Luas Gudang"
                                    android:textAppearance="?attr/textAppearanceHeadline6"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/edit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:backgroundTint="#EDF7FF"
                                    android:scaleType="fitXY"
                                    app:icon="@drawable/edit"
                                    app:iconTint="#0F4C81"
                                    android:text="Edit"
                                    android:textAllCaps="false"
                                    android:textColor="#0F4C81"
                                    android:textStyle="bold" />
                            </RelativeLayout>


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tgl. Survey"
                                android:textColor="#9E9E9E" />

                            <TextView
                                android:id="@+id/tanggal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="end"
                                android:textColor="#212121"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Perhitungan :"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="#0A0A0A" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stok Galon Kosong + Isi"
                                android:textColor="#9E9E9E" />

                            <TextView
                                android:id="@+id/stok_galon_kosong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="#212121"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Luas Gudang"
                                android:textColor="#9E9E9E" />
                            <TextView
                                android:id="@+id/luas_gudang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="#212121"
                                android:textStyle="bold" />
                        </RelativeLayout>


                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hasil :"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="#0A0A0A" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="Space Vs Standar Botol"
                                android:textColor="#9E9E9E" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/total_galon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="-1dp"
                                android:text=""
                                android:textColor="#212121"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                app:chipBackgroundColor="@null"
                                app:chipCornerRadius="5dp"
                                app:chipMinTouchTargetSize="0dp"
                                app:chipStrokeWidth="2dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hasil Survei"
                                android:layout_centerVertical="true"
                                android:textColor="#9E9E9E" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/hasil"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="#212121"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                app:chipBackgroundColor="@null"
                                app:chipCornerRadius="5dp"
                                app:chipMinTouchTargetSize="0dp"
                                app:chipStrokeWidth="2dp" />
                        </RelativeLayout>

                        <com.google.android.material.chip.Chip
                            android:layout_marginTop="18dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textColor="#0F4C81"
                            app:chipSurfaceColor="#EDF7FF"
                            app:chipStrokeColor="#AFC3D5"
                            android:text="Perhitungan luas gudang : 1 Meter = 48 Galon."
                            android:textSize="12dp"
                            android:textStyle="bold"
                            app:chipBackgroundColor="@null"
                            app:chipCornerRadius="5dp"
                            app:chipMinTouchTargetSize="0dp"
                            app:chipStrokeWidth="2dp" />



                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/linearstock"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_galon_kosong"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/judultext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detail_galon_kosong"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/assignment_turned_in" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Survei Stok Galon &amp; Luas Gudang"
                            android:textColor="#0F4C81"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <com.google.android.material.chip.Chip
                        android:layout_marginTop="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#0F4C81"
                        app:chipSurfaceColor="#EDF7FF"
                        app:chipStrokeColor="#AFC3D5"
                        android:text="Perhitungan luas gudang : 1 Meter = 48 Galon."
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:chipBackgroundColor="@null"
                        app:chipCornerRadius="5dp"
                        app:chipMinTouchTargetSize="0dp"
                        app:chipStrokeWidth="2dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/stokgalon"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/judultext"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="18dp"
                        app:boxCornerRadiusBottomEnd="4dp"
                        app:boxCornerRadiusBottomStart="4dp"
                        app:boxCornerRadiusTopEnd="4dp"
                        app:boxCornerRadiusTopStart="4dp"
                        app:boxStrokeColor="#0F4C81">

                        <EditText
                            android:id="@+id/editstokgalon"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_gravity="center_horizontal"
                            android:hint="Masukan Stok Galon"
                            android:inputType="numberDecimal|numberSigned"
                            android:singleLine="true"
                            android:textSize="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/luasgudang"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/stokgalon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="18dp"
                        app:boxCornerRadiusBottomEnd="4dp"
                        app:boxCornerRadiusBottomStart="4dp"
                        app:boxCornerRadiusTopEnd="4dp"
                        app:boxCornerRadiusTopStart="4dp"
                        app:boxStrokeColor="#0F4C81">

                        <EditText
                            android:id="@+id/editluasgudang"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_gravity="center_horizontal"
                            android:hint="Masukan Luas Gudang/m2"
                            android:inputType="numberDecimal|numberSigned"
                            android:singleLine="true"
                            android:textSize="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>



            </RelativeLayout>
        </ScrollView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/linearbutton"
            android:gravity="center"
            android:background="#ffffff"
            android:padding="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:cardElevation="40dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:visibility="visible"
                android:background="#ffffff"
                android:padding="16dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/batal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:text="Batal"
                    android:textAllCaps="false"
                    android:textColor="#0F4C81"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/proses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="#0F4C81"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:text="Proses"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>

