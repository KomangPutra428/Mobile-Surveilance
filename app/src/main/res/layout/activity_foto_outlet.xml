<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".foto_outlet">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/gambardepan"
            android:visibility="gone"
            android:layout_width="226dp"
            android:layout_height="226dp"
            android:layout_marginTop="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_kamera" />
        <ImageView
            android:id="@+id/gambargudang"
            android:visibility="gone"
            android:layout_width="226dp"
            android:layout_height="226dp"
            android:layout_marginTop="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_kamera" />
        <ImageView
            android:id="@+id/gambarareaparkir"
            android:visibility="gone"
            android:layout_width="226dp"
            android:layout_height="226dp"
            android:layout_marginTop="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_kamera" />
        <ImageView
            android:id="@+id/gambarmasuk"
            android:visibility="gone"
            android:layout_width="226dp"
            android:layout_height="226dp"
            android:layout_marginTop="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_kamera" />
        <ImageView
            android:id="@+id/gambarkanan"
            android:visibility="gone"
            android:layout_width="226dp"
            android:layout_height="226dp"
            android:layout_marginTop="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_kamera" />
        <ImageView
            android:id="@+id/gambarkiri"
            android:visibility="gone"
            android:layout_width="226dp"
            android:layout_height="226dp"
            android:layout_marginTop="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_kamera" />
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="8dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/biodatabar"
            android:layout_width="match_parent"
            android:background="#ffffff"
            app:titleTextColor="#212121"
            android:layout_height="56dp"
            app:title="Foto Outlet"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            />
    </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:id="@+id/profilelayout"
            android:layout_below="@+id/toolbar"
            android:layout_above="@id/linearbutton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:nestedScrollingEnabled="true">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1">
                <TableRow
                    android:layout_weight="1">
                    <RelativeLayout
                        android:id="@+id/depan"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:background="@drawable/editbox">

                        <ImageView
                            android:id="@+id/uploaddepan"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginTop="60dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_kamera" />

                        <TextView
                            android:id="@+id/textdepan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/uploaddepan"
                            android:layout_marginBottom="20dp"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:text="Tampak Depan"/>

                        <LinearLayout
                            android:id="@+id/lineardepan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:background="#0F4C81"
                            android:layout_alignParentBottom="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textSize="12dp"
                                android:textColor="#fff"
                                android:text="Ubah Foto Depan"/>
                        </LinearLayout>



                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/dalam"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/editbox"
                        android:foreground="?android:attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/uploaddalam"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="60dp"
                            android:src="@drawable/icon_kamera" />

                        <TextView
                            android:id="@+id/textdalam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/uploaddalam"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:text="Dalam Gudang"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:id="@+id/lineardalam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="vertical"
                            android:background="#0F4C81"
                            android:layout_alignParentBottom="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:text="Ubah Foto Dalam"/>
                        </LinearLayout>

                    </RelativeLayout>

                </TableRow>

                <TableRow
                    android:layout_marginTop="20dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:id="@+id/parkir"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:background="@drawable/editbox">

                        <ImageView
                            android:id="@+id/uploadparkir"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginTop="60dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_kamera" />

                        <TextView
                            android:id="@+id/textparkir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/uploadparkir"
                            android:layout_marginBottom="20dp"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:text="Area Parkir"/>

                        <LinearLayout
                            android:id="@+id/linearparkir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:background="#0F4C81"
                            android:layout_alignParentBottom="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textSize="12dp"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:text="Ubah Foto Area Parkir"/>
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/masuk"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:background="@drawable/editbox">

                        <ImageView
                            android:id="@+id/uploadmasuk"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginTop="60dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_kamera" />

                        <TextView
                            android:id="@+id/textmasuk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/uploadmasuk"
                            android:layout_marginBottom="20dp"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:text="Akses Jalan Masuk"/>

                        <LinearLayout
                            android:id="@+id/linearmasuk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="#0F4C81"
                            android:visibility="gone"
                            android:layout_alignParentBottom="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:text="Ubah Foto Akses Jalan Masuk"/>
                        </LinearLayout>

                    </RelativeLayout>

                </TableRow>

                <TableRow
                    android:layout_marginTop="20dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:id="@+id/kanan"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:background="@drawable/editbox">

                        <ImageView
                            android:id="@+id/uploadkanan"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginTop="60dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_kamera" />

                        <TextView
                            android:id="@+id/textkanan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/uploadkanan"
                            android:layout_marginBottom="20dp"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:text="Akses Jalan Kanan"/>

                        <LinearLayout
                            android:id="@+id/linearkanan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:background="#0F4C81"
                            android:layout_alignParentBottom="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:text="Ubah Foto Akses Jalan Kanan"/>
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/kiri"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:background="@drawable/editbox">

                        <ImageView
                            android:id="@+id/uploadkiri"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginTop="60dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_kamera" />

                        <TextView
                            android:id="@+id/textkiri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_below="@+id/uploadkiri"
                            android:layout_marginBottom="20dp"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:text="Akses Jalan Kiri"/>

                        <LinearLayout
                            android:id="@+id/linearkiri"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:background="#0F4C81"
                            android:layout_alignParentBottom="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_centerInParent="true"
                                android:textSize="12dp"
                                android:textColor="#fff"
                                android:text="Ubah Foto Akses Jalan Kiri"/>
                        </LinearLayout>

                    </RelativeLayout>
                </TableRow>
            </TableLayout>
        </ScrollView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/linearbutton"
            android:gravity="center"
            android:background="#ffffff"
            android:padding="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:cardElevation="40dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:visibility="visible"
                android:background="#ffffff"
                android:padding="16dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/batal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:text="Batal"
                    android:textAllCaps="false"
                    android:textColor="#0F4C81"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/selanjutnya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="#0F4C81"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:text="Selanjutnya"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>