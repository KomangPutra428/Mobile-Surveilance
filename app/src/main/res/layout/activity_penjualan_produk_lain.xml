<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".penjualan_produk_lain">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:elevation="8dp">
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/biodatabar"
                android:layout_width="match_parent"
                android:background="#ffffff"
                app:titleTextColor="#212121"
                android:layout_height="56dp"
                app:title="Penjualan Produk Lain"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                />
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:id="@+id/penjualanlinear"
            android:layout_width="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/linearbutton"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_below="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Database Pelanggan"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textSize="20dp" />
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Skala Penjualan"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textSize="16dp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/coverage"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    app:boxCornerRadiusBottomEnd="4dp"
                    app:boxCornerRadiusBottomStart="4dp"
                    app:boxCornerRadiusTopEnd="4dp"
                    app:boxCornerRadiusTopStart="4dp"
                    app:boxStrokeColor="#0F4C81"
                    app:endIconMode="custom">
                    <EditText
                        android:id="@+id/editcoverage"
                        android:gravity="top"
                        android:layout_width="match_parent"
                        android:layout_height="122dp"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_horizontal"
                        android:hint="Area Coverage"
                        android:textSize="16dp"
                        tools:layout_editor_absoluteX="41dp"
                        tools:layout_editor_absoluteY="442dp"
                        android:autofillHints="" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="24dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Jumlah Pelanggan Rumahan"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_below="@+id/textView">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/minusrumahan"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/minus">
                        </ImageButton>

                        <EditText
                            android:id="@+id/editrumahan"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textAlignment="center">
                        </EditText>

                        <ImageButton
                            android:id="@+id/addrumahan"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/add">
                        </ImageButton>

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="24dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Jumlah Pelanggan Kantoran"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_below="@+id/textView">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/minuskantoran"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/minus">
                        </ImageButton>

                        <EditText
                            android:id="@+id/editkantoran"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textAlignment="center">
                        </EditText>

                        <ImageButton
                            android:id="@+id/addkantoran"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/add">
                        </ImageButton>

                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="24dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Jumlah Pelanggan Outlet"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_below="@+id/textView">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/minusoutlet"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/minus">
                        </ImageButton>

                        <EditText
                            android:id="@+id/editoutlet"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textAlignment="center">
                        </EditText>

                        <ImageButton
                            android:id="@+id/addoutlet"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/add">
                        </ImageButton>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/textproduk"
                    android:layout_below="@+id/warning_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:text="Produk Lain"/>

                    <TextView
                        android:id="@+id/tambah"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="#1EB547"
                        android:layout_height="wrap_content"
                        android:text="+ Omset/Bulan"/>

                </RelativeLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0,1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TableRow>
                        <CheckBox
                            android:id="@+id/elpijicek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:layout_gravity="center_vertical"
                            android:text="Gas Elpiji"
                            />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/elpiji"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            app:boxCornerRadiusBottomEnd="4dp"
                            app:boxCornerRadiusBottomStart="4dp"
                            app:boxCornerRadiusTopEnd="4dp"
                            android:layout_toRightOf="@+id/RToutlet"
                            app:boxCornerRadiusTopStart="4dp"
                            app:boxStrokeColor="#0F4C81">
                            <EditText
                                android:id="@+id/editelpiji"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:inputType="number"
                                android:paddingLeft="10dp"
                                android:layout_gravity="center_horizontal"
                                android:hint="Rp"
                                android:text="0"
                                android:singleLine="true"
                                android:textSize="16dp"
                                tools:layout_editor_absoluteX="41dp"
                                tools:layout_editor_absoluteY="442dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp">
                        <CheckBox
                            android:id="@+id/sembakocek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:layout_gravity="center_vertical"
                            android:text="Sembako"
                            />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/sembako"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            app:boxCornerRadiusBottomEnd="4dp"
                            app:boxCornerRadiusBottomStart="4dp"
                            app:boxCornerRadiusTopEnd="4dp"
                            android:layout_toRightOf="@+id/RToutlet"
                            app:boxCornerRadiusTopStart="4dp"
                            app:boxStrokeColor="#0F4C81">
                            <EditText
                                android:id="@+id/editsembako"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:inputType="number"
                                android:paddingLeft="10dp"
                                android:layout_gravity="center_horizontal"
                                android:hint="Rp"
                                android:text="0"
                                android:singleLine="true"
                                android:textSize="16dp"
                                tools:layout_editor_absoluteX="41dp"
                                tools:layout_editor_absoluteY="442dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp">
                        <CheckBox
                            android:id="@+id/amdkcek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:layout_gravity="center_vertical"
                            android:text="Minuman lain
diluar AMDK"
                            />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/amdk"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            app:boxCornerRadiusBottomEnd="4dp"
                            app:boxCornerRadiusBottomStart="4dp"
                            app:boxCornerRadiusTopEnd="4dp"
                            android:layout_toRightOf="@+id/RToutlet"
                            app:boxCornerRadiusTopStart="4dp"
                            app:boxStrokeColor="#0F4C81">
                            <EditText
                                android:id="@+id/editamdk"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:inputType="number"
                                android:paddingLeft="10dp"
                                android:text="0"
                                android:layout_gravity="center_horizontal"
                                android:hint="Rp"
                                android:singleLine="true"
                                android:textSize="16dp"
                                tools:layout_editor_absoluteX="41dp"
                                tools:layout_editor_absoluteY="442dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </TableRow>


                </TableLayout>

                <ListView
                    android:id="@+id/produklain"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:divider="@null"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_marginTop="36dp"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Kontribusi Penjualan AMDK dalam 1 bulan (in value)"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textSize="16dp" />
                <RadioGroup
                    android:id="@+id/buttonpersen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <RadioButton
                        android:id="@+id/persen1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dibawah 10%"
                        android:layout_column="0" />
                    <RadioButton
                        android:id="@+id/persen2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 hingga 50%"
                        android:layout_column="1" />
                    <RadioButton
                        android:id="@+id/persen3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diatas 50%"
                        android:layout_column="0" />

                </RadioGroup>

                <TextView
                    android:layout_marginTop="36dp"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Produk apa saja yang tersedia di toko ?"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textSize="16dp" />
                <CheckBox
                    android:id="@+id/produk1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AMDK"
                    android:layout_column="0" />
                <CheckBox
                    android:id="@+id/produk2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Air isi ulang"
                    android:layout_column="0" />
                <CheckBox
                    android:id="@+id/produk3"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gas"
                    android:layout_column="0" />
                <CheckBox
                    android:id="@+id/produk4"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minuman dalam kemasan lainnya (susu, kopi, botolan, soda, the isotonik, dll)"
                    android:layout_column="0" />
                <CheckBox
                    android:id="@+id/produk5"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Makanan/minuman kemasan bubuk (kopi, susu, nutris*ri, dll)"
                    android:layout_column="0" />
                <CheckBox
                    android:id="@+id/produk6"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rokok"
                    android:layout_column="0" />
                <CheckBox
                    android:id="@+id/produk7"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sembako (Minyak, Beras)"
                    android:layout_column="0" />
                <CheckBox
                    android:id="@+id/produk8"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Snack &amp; Biskuit"
                    android:layout_column="0" />
                <CheckBox
                    android:id="@+id/produk9"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal &amp; Home Care (Sabun, Sampo, odol, Deterjen dll)"
                    android:layout_column="0" />

                <TextView
                    android:layout_marginTop="36dp"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Merek AMDK"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textSize="16dp" />
                <CheckBox
                    android:id="@+id/amdk1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AQUA"
                    android:layout_column="0" />
                <CheckBox
                    android:id="@+id/amdk2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIT"
                    android:layout_column="0" />
                <CheckBox
                    android:id="@+id/amdk3"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LM"
                    android:layout_column="0" />
                <CheckBox
                    android:id="@+id/amdk4"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oas*s"
                    android:layout_column="0" />

                <CheckBox
                    android:id="@+id/amdk5"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S*nqua"
                    android:layout_column="0" />
                <CheckBox
                    android:id="@+id/amdk6"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T*ds"
                    android:layout_column="0" />
                <CheckBox
                    android:id="@+id/amdk7"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="G*nung"
                    android:layout_column="0" />
                <CheckBox
                    android:id="@+id/amdk8"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lain-lain"
                    android:layout_column="0" />

            </LinearLayout>
        </ScrollView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/linearbutton"
            android:gravity="center"
            android:background="#ffffff"
            android:padding="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:cardElevation="40dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:visibility="visible"
                android:background="#ffffff"
                android:padding="16dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/kembali"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:text="Kembali"
                    android:textAllCaps="false"
                    android:textColor="#0F4C81"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/simpan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="#0F4C81"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:text="Simpan"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>